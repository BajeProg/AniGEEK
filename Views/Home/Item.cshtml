@using AniGeekAPI.Classes;
@model Product
@{
    ViewData["Title"] = Model.Name;
    ViewData["css"] = "Item_.css";
}
<div class="content">
    <form style="display: grid;" method="get" action="~/Home/Order">
        @if (Model.ImageSource != null)
        {
            <img class="image" src="@Model.ImageSource" />
        }
        else{
            <img class="image" src="https://static.vecteezy.com/system/resources/previews/005/337/799/original/icon-image-not-found-free-vector.jpg" />
        }
        <input name="id" value="@Model.ID" style="display: none;">
        <button class="price" type="submit">
            Купить @Model.Price₽
        </button>
    </form>
    <div class="info">
        <div class="desc">@Model.Name</div>
        <div class="text">@Model.Description</div>
    </div>
</div>